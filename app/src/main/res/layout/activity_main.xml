<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.memorease.laclair.android.myapplication.MainActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="@string/app_name"
        android:textSize="54sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/createCardButton"
            style="@style/MainActivityButton"
            android:onClick="sendToCreateCardActivity"
            android:text="@string/create_card" />

        <Button
            android:id="@+id/topicsButton"
            style="@style/MainActivityButton"
            android:onClick="sendToAllTopicsActivity"
            android:text="@string/topics" />

        <Button
            android:id="@+id/todaysStudyButton"
            style="@style/MainActivityButton"
            android:onClick="sendToTodaysStudyActivity"
            android:text="@string/todays_study" />

        <Button
            android:id="@+id/myScoresButton"
            style="@style/MainActivityButton"
            android:onClick="sendToMyScoresActivity"
            android:text="@string/my_scores" />
    </LinearLayout>

</RelativeLayout>
