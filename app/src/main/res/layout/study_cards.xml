<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/todaysStudyTitle"
            style="@style/ActivityTitle"
            android:text="@string/study_cards" />

        <TextView
            android:id="@+id/topicStudyToday"
            style="@style/TodaysStudyTopSubtopicText"
            android:layout_alignLeft="@+id/questionCardView"
            android:layout_alignStart="@+id/questionCardView"
            android:layout_below="@+id/todaysStudyTitle"
            android:hint="@string/topic" />

        <TextView
            android:id="@+id/subTopicStudyToday"
            style="@style/TodaysStudyTopSubtopicText"
            android:layout_alignLeft="@+id/topicStudyToday"
            android:layout_alignStart="@+id/topicStudyToday"
            android:layout_below="@+id/topicStudyToday"
            android:hint="@string/sub_topic" />

        <RelativeLayout
            android:id="@+id/questionCardView"
            style="@style/RelativeLayoutForCardView"
            android:layout_below="@id/subTopicStudyToday">

            <android.support.v7.widget.CardView style="@style/CardViewForCreateCardActivity">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/TextViewForCardView" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <Button
            android:id="@+id/flipOver"
            style="@style/FlipCardOverButton"
            android:layout_below="@+id/questionCardView"
            android:text="Flip Card" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_below="@+id/flipOver"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:id="@+id/radioGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:text="@string/correct"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:text="@string/incorrect"/>
        </RadioGroup>

        <Button
            android:id="@+id/nextCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_below="@+id/radioGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="@string/next_card" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nextCard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:textSize="18sp"
            android:text="@string/delete_card" />

    </RelativeLayout>

</ScrollView>